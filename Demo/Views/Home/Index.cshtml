
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>King Holiday</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="img/favicon.ico" />
    <!-- Bootstrap -->
    <!-- global css -->
    <link href="css/app.css" rel="stylesheet">
    <!-- end of global css -->
    <!--page level css -->
    <link rel="stylesheet" type="text/css" href="css/custom.css">
    <link href="css/login2.css" rel="stylesheet">
    <!--end page level css-->
</head>
<body class="bg-slider">
    <div class="preloader">
        <div class="loader_img"><img src="img/loader.gif" alt="loading..." height="64" width="64"></div>
    </div>
    <div class="container">
        <div class="row " id="form-login">
            <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1 login-content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="header">
                            <h2 class="text-center">
                                KING HOLIDAY
                            </h2>
                        </div>
                    </div>
                </div>
                <div class="row row-bg-color">
                    <div class="col-md-6 core-login">
                        <form class="form-horizontal" method="POST" id="authentication">

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group ">
                                        <div class="text-center mbl">
                                            <img src="~/img/hotel.png" alt="img" class="img img-bor">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="text-center mbl">
                                    <a href="/Hotel" class="btn btn-primary login-btn">Hotel Booking</a>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-6 core-login">
                        <div class="form-horizontal">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group ">
                                        <div class="text-center mbl">
                                            <img src="~/img/airplane.png" alt="img" class="img img-bor">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="text-center mbl">
                                    <a href="javascript:;" class="btn btn-primary login-btn">Airline Booking</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- global js -->
    <script src="js/jquery-1.11.3.min.js" type="text/javascript"></script>
    <script src="js/bootstrap.min.js" type="text/javascript"></script>
    <script src="js/backstretch.js"></script>
    <!-- end of global js -->
    <!-- page level js -->
    <script type="text/javascript" src="js/custom_js/login.js"></script>
    <!-- end of page level js -->
</body>

</html>
